<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instagram.HelpActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:text="How to download posts from Instagram?"
            android:textSize="28sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Click on the three dot menu to get the following and select Share Link or Copy Link (If you click on copy link you have to open the manually and paste it)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.amsavarthan.apps.media_toolbox.View.HifyImageView
            android:layout_marginTop="10dp"
            android:src="@mipmap/insta_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Choose Media Toolbox from the screen as shown below\n\nNote: Posts which doesn't show Copy Link option is not capable of downloading it (Private Account)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.amsavarthan.apps.media_toolbox.View.HifyImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/insta_help2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>